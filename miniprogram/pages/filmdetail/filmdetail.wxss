/* pages/filmdetail/filmdetail.wxss */
/* 1背景图片模糊 */
.detail-container{
height: 400rpx;
opacity: 0.9;
filter: blur(40rpx)
}
.detail-mask{
position: absolute;
width: 100%;
height: 400rpx;
background: #333333;
left: 0;
top:0;
z-index: -1
}
/* 3.电影完整信息 */
.detail-info{
position: absolute;
display: flex;
width: 100%;
height: 400rpx;
top: 0;
left: 0;
padding: 20rpx;
}
/* 右侧图片 */
.detail-img{
width: 280rpx;
height: 90%;
margin-right: 24rpx; /*右侧文字间距*/
border-radius: 20rpx;
}
.detail{
line-height: 60rpx;
}
.detail view{
color: #fff;
font-size: 28rpx;
}
/* 6.电影评分 */
.detail .detail-sc{
color: #fc0;
font-size: 36rpx;
}
/* 7.电影描述 */
.desc{
color: #555;
font-size: 24rpx;
padding: 20rpx;
}
/* 8.预览图片 */
.comment-img{
width: 200rpx;
height: 200rpx;
margin-right: 20rpx;
}